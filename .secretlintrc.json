{
  "rules": [
    {
      "id": "@secretlint/secretlint-rule-preset-recommend"
    },
    {
      "id": "@secretlint/secretlint-rule-pattern",
      "options": {
        "patterns": [
          {
            "name": "HTTP Token Pattern",
            "pattern": "\\w+_HTTP_TOKEN\\s*=\\s*['\"]([a-zA-Z0-9]{20,})['\"]",
            "message": "Found HTTP Token"
          },
          {
            "name": "Google API Key",
            "pattern": "AIza[0-9A-Za-z\\-_]{35}",
            "message": "Found Google API Key"
          },
          {
            "name": "Service Account Key File",
            "pattern": "\\.json",
            "message": "JSON file detected - check if it contains credentials"
          }
        ]
      }
    }
  ],
  "ignore": [
    "node_modules",
    ".git",
    "*.log",
    "logs/**",
    "venv/**",
    ".env.example"
  ]
}