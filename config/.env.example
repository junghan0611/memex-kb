# Google Drive 설정
GOOGLE_DRIVE_FOLDER_ID=your_tech_docs_folder_id_here
GOOGLE_OUTPUT_FOLDER_ID=your_markdown_output_folder_id_here

# Google API 인증
GOOGLE_APPLICATION_CREDENTIALS=config/credentials.json
GOOGLE_OAUTH_TOKEN_FILE=config/token.json

# 동기화 설정
SYNC_INTERVAL_MINUTES=15
MAX_DOCS_PER_RUN=50
ENABLE_AUTO_COMMIT=true

# Git 설정
GIT_REMOTE_URL=git@github.com:junghan0611/memex-kb.git
GIT_BRANCH=main
GIT_AUTHOR_NAME=Tech Docs Bot
GIT_AUTHOR_EMAIL=git@abc.com@

# 로깅 설정
LOG_LEVEL=INFO
LOG_TO_FILE=true
LOG_MAX_SIZE_MB=10
LOG_BACKUP_COUNT=5

# 알림 설정 (선택사항)
ENABLE_NOTIFICATIONS=false
SLACK_WEBHOOK_URL=
EMAIL_NOTIFICATIONS=

# 문서 처리 설정
DEFAULT_LANGUAGE=ko
ENABLE_IMAGE_DOWNLOAD=false
MAX_DOCUMENT_SIZE_MB=10

# LLM 검수 설정 (향후 확장용)
ENABLE_LLM_REVIEW=false
OPENAI_API_KEY=
LLM_MODEL=gpt-3.5-turbo
